{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
  <a href="/members/create">Novo</a>
  <table width="100%">
    <thead>
      <tr>
        <th>Instructor</th>
        <th>Atendimento</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for instructor in members %}
      <tr>
        <td>
          <span style="background: url({{ instructor.avatar_url }})"></span> 
          {{instructor.name}}</td>
        <td>{{instructor.services}}</td>
        <td><a href="/members/{{instructor.id}}">ver</a></td>
      </tr>
       {% endfor %}
    </tbody>
  </table>
</div>
{% endblock content %}
